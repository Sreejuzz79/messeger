                    const newUnreadMessages = {};
                    Object.keys(data.unreadMessages).forEach(chatId => {
                        newUnreadMessages[chatId] = data.unreadMessages[chatId];
                    });

                    // Update the global variable
                    unreadMessages = newUnreadMessages;

                    updateUnreadDots();
                    return true;
                } else {
                    console.error('Failed to load unread counts');
                    return false;
                }
            })
            .catch(error => {
                console.error('Error loading unread messages count:', error);
                return false;
            });
        }

        function updateUnreadDots() {
            console.log('=== UPDATING UNREAD DOTS ===');
            console.log('Current unreadMessages:', unreadMessages);

            // Remove existing dots
            document.querySelectorAll('.unread-dot').forEach(dot => {
                dot.remove();
            });

            // Add dots for chats with unread messages
            Object.keys(unreadMessages).forEach(chatId => {
                const count = unreadMessages[chatId];

                if (count > 0) {
                    console.log(`Processing chat ${chatId} with ${count} unread messages`);

                    let userItem = null;
                    let isGroup = false;

                    // First, check if this is a GROUP
                    userItem = document.querySelector(`.user-item[data-group-id="${chatId}"]`);
                    if (userItem) {
                        isGroup = true;
                        console.log(`✓ Found GROUP item for ID ${chatId}:`, userItem);
                    }
                    // If not a group, check if it's a USER
                    else {
                        userItem = document.querySelector(`.user-item[data-user-id="${chatId}"]`);
                        if (userItem) {
                            isGroup = false;
                            console.log(`✓ Found USER item for ID ${chatId}:`, userItem);
                        }
                    }

                    if (userItem) {
                        const isActive = userItem.classList.contains('active');
                        console.log(`Chat ${chatId} (${isGroup ? 'GROUP' : 'USER'}) - Item found, is active: ${isActive}`);

                        if (!isActive) {
                            // Add new dot
                            const dot = document.createElement('div');
                            dot.className = 'unread-dot';
                            dot.title = `${count} unread message${count > 1 ? 's' : ''}`;

                            // Ensure user item has relative positioning
                            userItem.style.position = 'relative';

                            userItem.appendChild(dot);
                            console.log(`✓ Added dot for ${isGroup ? 'GROUP' : 'USER'} chat: ${chatId}, count: ${count}`);
                        } else {
                            console.log(`✗ Skipping dot for active chat: ${chatId}`);
                        }
                    } else {
                        console.log(`✗ No user/group item found for chat ID: ${chatId}`);
                    }
                }
            });

            // Debug: Count how many dots are actually in the DOM
            const dotCount = document.querySelectorAll('.unread-dot').length;
            console.log(`Total dots in DOM after update: ${dotCount}`);
        }

        function markMessagesAsRead() {
            if (!currentReceiverId || isMarkingAsRead) {
